;; You can control ironman settings from here
;; ATTENTION: new values will take effect only on new ironman games, any changes won't work on previous playthourghs

;; death_limit  		-  determines how many times you can die before losing your saves
;; enable_new_life		-  enable/disable the ability to gain additional lives after (x) hours ("false" means off, "true" means on)
;; cycle_of_new_life  	-  determines how much time (in hours) need to pass before granting additional life (sleeping won't work), default value is 120 hours (5 days)


[ironman_settings]
death_limit			= 5
enable_new_life		= true
cycle_of_new_life 	= 24